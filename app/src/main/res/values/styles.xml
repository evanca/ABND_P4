<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="menu_button">
        <item name="android:layout_width">@dimen/menu_button_25dp</item>
        <item name="android:layout_height">@dimen/menu_button_25dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginHorizontal">@dimen/layout_margin_16dp</item>
        <item name="android:layout_marginLeft">@dimen/layout_margin_16dp</item>
        <item name="android:layout_marginRight">@dimen/layout_margin_16dp</item>
        <item name="android:layout_marginTop">@dimen/layout_margin_16dp</item>
        <item name="android:background">@null</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="menu_star_cd">
        <item name="android:layout_width">@dimen/menu_button_25dp</item>
        <item name="android:layout_height">@dimen/menu_button_25dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginHorizontal">@dimen/layout_margin_8dp</item>
        <item name="android:layout_marginLeft">@dimen/layout_margin_16dp</item>
        <item name="android:layout_marginRight">@dimen/layout_margin_16dp</item>
        <item name="android:layout_marginTop">@dimen/layout_margin_16dp</item>
        <item name="android:background">@null</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="header_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/layout_margin_16dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="forward_button">
        <item name="android:layout_width">@dimen/forward_button_55dp</item>
        <item name="android:layout_height">@dimen/forward_button_55dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_margin">@dimen/layout_margin_16dp</item>
        <item name="android:background">@null</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

</resources>
